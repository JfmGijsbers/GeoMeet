<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:style="http://schemas.android.com/apk/res-auto"
    tools:context=".NewMeeting"
    android:background="@color/colorPrimaryDark"
    android:padding="30dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Meeting name:"
        android:id="@+id/txt_email"
        />
    <EditText
        android:inputType="textPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et_name"
        android:layout_below="@id/txt_email"
        />
    <TextView
        android:layout_below="@id/et_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Location:"
        android:id="@+id/txt_firstname"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et_location"
        android:layout_below="@id/txt_firstname"
        />
    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et_manualUser"
        android:layout_below="@id/et_location"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_addUser"
        android:text="Add user"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignTop="@id/et_manualUser"
        android:layout_toEndOf="@id/et_manualUser"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Invited:"
        android:id="@+id/txt_lastname"
        android:layout_below="@id/et_manualUser"
        />
    <ListView
        android:inputType="textPersonName"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:ems="10"
        android:id="@+id/connectionListView"
        android:layout_below="@id/txt_lastname"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Description:"
        android:id="@+id/txt_password"
        android:layout_below="@id/connectionListView"
        />
    <EditText
        android:inputType="textMultiLine|textCapSentences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLines="5"
        android:id="@+id/et_description"
        android:layout_below="@id/txt_password"
        />
    <LinearLayout
        android:id="@+id/linearlayout_date"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_description"
        android:orientation="horizontal"
        >
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="2"
            android:hint="DD"
            android:id="@+id/et_day"

        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="2"
            android:hint="MM"
            android:id="@+id/et_month"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="4"
            android:hint="YYYY"
            android:id="@+id/et_year"
            />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="at"
            />
        <EditText
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="2"
            android:hint="HH"
            android:id="@+id/et_hour"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            />
        <EditText
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="2"
            android:hint="MM"
            android:id="@+id/et_minute"
            />
    </LinearLayout>
    <Button
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:onClick="createMeeting"
        android:id="@+id/btn_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:layout_below="@id/linearlayout_date"
        android:ems="10"
        android:text="Create"
        style="@style/Widget.AppCompat.Button.Colored"
        />
    <TextView
        android:onClick="toAllMeetings"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_create"
        android:text="Cancel"
        android:id="@+id/toRegister"
        />

</RelativeLayout>