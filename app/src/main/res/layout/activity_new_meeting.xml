<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@color/colorPrimaryDark"
    android:padding="30dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Meeting name:"
        android:id="@+id/txt_email"
        />
    <EditText
        android:inputType="textEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et_email"
        android:layout_below="@id/txt_email"
        />
    <TextView
        android:layout_below="@id/et_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Location:"
        android:id="@+id/txt_firstname"
        />
    <EditText
        android:inputType="textPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et_firstname"
        android:layout_below="@id/txt_firstname"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Invited:"
        android:id="@+id/txt_lastname"
        android:layout_below="@id/et_firstname"
        />
    <ListView
        android:inputType="textPersonName"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:ems="10"
        android:id="@+id/et_lastname"
        android:layout_below="@id/txt_lastname"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Description:"
        android:id="@+id/txt_password"
        android:layout_below="@id/et_lastname"
        />
    <EditText
        android:inputType="textMultiLine|textCapSentences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLines="5"
        android:id="@+id/et_password"
        android:layout_below="@id/txt_password"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="03/03/2020 at 13:30"
        android:onClick="pickTime"
        android:id="@+id/txt_confirmPassword"
        android:layout_below="@id/et_password"
        />
    <Button
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:onClick="register"
        android:background="@drawable/btn_rounded_corner"
        android:id="@+id/btn_register"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:layout_below="@id/txt_confirmPassword"
        android:ems="10"
        android:text="Create"
        />
    <TextView
        android:onClick="toLogin"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_register"
        android:text="Cancel"
        android:id="@+id/toRegister"
        />

</RelativeLayout>